{
  "name": "twitter",
  "version": "1.0.0",
  "scripts": {
    "client": "cd client && npm start",
    "client-build": "cd client && react-scripts build",
    "server": "nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "build": "concurrently \"npm run client-build\" \"babel . --ignore node_modules,build --out-dir build\"",
    "clean": "concurrently \"rimraf node_modules\" \"cd client && rimraf node_modules build\" \"rimraf node_modules build\"",
    "heroku-postbuild": "npm build",
    "install": "(cd client && npm install) && (npm install)",
    "start": "concurrently \"cd client && PORT=3000 npm start\" \"nodemon -r babel-register server.js\"",
    "start:prod": "node build/server.js"
  },
  "dependencies": {
    "dotenv": "4.0.0",
    "express": "^4.16.2",
    "twitter-node-client": "0.0.6",
    "rimraf": "^2.5.4"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "babel-register": "^6.22.0",
    "nodemon": "^1.18.3"
  },
  "engines": {
    "node": "v10.7.0"
  }
}
